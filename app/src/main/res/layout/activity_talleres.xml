                            android:text="@string/price2"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardDuration2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardPrice2"
                            android:layout_marginTop="8dp"
                            android:text="@string/duration2"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardCupo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardDuration2"
                            android:layout_marginTop="8dp"
                            android:text="@string/cupo2"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <!-- Tercer taller -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/showCardButton3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title3"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:fontFamily="@font/andbasr"
                    android:backgroundTint="@android:color/white"
                    android:padding="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/infoCard3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"
                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/white"
                    android:layout_below="@id/showCardButton3">

                    <RelativeLayout
                        android:layout_width="match_parent"
