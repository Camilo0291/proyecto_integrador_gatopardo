<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#003f54">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:padding="16dp"
        android:id="@+id/main">

        <!-- Título principal -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/title_activity_workshops"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:textStyle="bold"
            android:layout_marginBottom="1dp"
            android:fontFamily="@font/andbasr"
            android:gravity="center"
            android:textAlignment="center" />

        <!-- Botón de búsqueda -->
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            android:text="@string/search_workshops"
            android:textStyle="bold"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:fontFamily="@font/andbasr"
            android:drawableLeft="@drawable/baseline_search_24"
            android:drawablePadding="8dp"
            android:padding="12dp" />

        <!-- Título del taller -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carvado de sellos"
            android:textColor="#FFFFFF"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textAlignment="center" />



        <!-- Descripción del taller -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Únete a nuestro taller creativo y descubre el arte de diseñar y crear tus propios sellos personalizados. Durante este curso, aprenderás las técnicas básicas de grabado y estampado, explorando diferentes materiales y herramientas que te permitirán dar vida a tus ideas."
            android:textColor="#D0D0D0"
            android:textSize="16sp"
            android:layout_marginBottom="10dp"
            android:textAlignment="center"
            android:gravity="center" />

        <!-- Llamada a la acción -->
        <Button
            android:id="@+id/buttontoform"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="¡Separa tu cupo!"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/andbasr"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:textAlignment="center" />


    </LinearLayout>

    <!-- Botón de acción sin bordes -->
    <Button
        android:id="@+id/buttonWorkshops"
        android:layout_gravity="center"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        android:textStyle="bold"
        android:text="@string/text_workshops"
        android:textColor="@color/black"
        android:fontFamily="@font/andbasr"
        android:padding="18dp" />

</LinearLayout>
