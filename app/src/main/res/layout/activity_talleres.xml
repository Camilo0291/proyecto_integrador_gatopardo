<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="#003f54">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_activity_workshops"
                android:textColor="#FFFFFF"
                android:textSize="44sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"
                android:fontFamily="@font/andbasr"
                android:gravity="center"
                android:textAlignment="center" />


            <!-- Primer taller -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
                    android:id="@+id/showCardButton1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/title1"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blue"
                    android:textStyle="bold"
                    android:fontFamily="@font/andbasr"
                    android:backgroundTint="@android:color/white"
                    android:padding="8dp" />

                <androidx.cardview.widget.CardView
                    android:id="@+id/infoCard1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:visibility="gone"

                    app:cardCornerRadius="8dp"
                    android:backgroundTint="@color/white"
                    android:layout_below="@id/showCardButton1">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/cardTitle1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/title1"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardDescription1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardTitle1"
                            android:layout_marginTop="8dp"
                            android:text="@string/description1"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardPrice1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardDescription1"
                            android:layout_marginTop="8dp"
                            android:text="@string/price1"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardDuration1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardPrice1"
                            android:layout_marginTop="8dp"
                            android:text="@string/duration1"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                        <TextView
                            android:id="@+id/cardCupo1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/cardDuration1"
                            android:layout_marginTop="8dp"
                            android:text="@string/cupo1"
                            android:textSize="16sp"
                            android:textColor="@color/blue" />

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>

            <!-- Segundo taller -->
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <Button
